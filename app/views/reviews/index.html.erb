<h1>Reviews for <%= link_to @movie.title, @movie %></h1>
<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent %> 
      <p>
        <%= review.name %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
          <%= link_to "Edit", edit_movie_review_path(@movie, review), id: "edit-review-#{review.id}", class: "button" %>
          <%= link_to "Delete", movie_review_path(@movie, review), id: "delete-review-#{review.id}", class: "button", method: :delete, data: { confirm: "Are you sure?" } %>
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
    </li>
  <% end %>
</ul>
